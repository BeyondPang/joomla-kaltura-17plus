<?xml version="1.0" encoding="utf-8"?>
<extension method="upgrade" type="component" version="2.5.0">
 <name>Kaltura Video</name>
 <!-- The following elements are optional and free of formatting constraints -->
 <creationDate>2012-01-28</creationDate>
 <author>Kaltura</author>
 <authorEmail>joomla@kaltura.com</authorEmail>
 <authorUrl>http:corp.kaltura.com</authorUrl>
 <copyright>Copyright Info</copyright>
 <license>License Info</license>
 <!--  The version string is recorded in the components table -->
 <version>2.0</version>
 <!-- The description is optional and defaults to the name -->
 <description>With this component you can activate your Kaltura Video extension</description>
  <languages>
    <language tag="en-GB">language/en-GB/en-GB.com_kalturavideo.ini</language>
  </languages>

  <!-- The config parameters -->
  <install>
    <sql>
      <file charset="utf8" driver="mysql">sql/install.sql</file>
    </sql>
  </install>

  <uninstall>
    <sql>
      <file charset="utf8" driver="mysql">sql/uninstall.sql</file>
    </sql>
  </uninstall>

  <!-- Site Main File Copy Section -->
 <!-- Note the folder attribute: This attribute describes the folder
      to copy FROM in the package to install therefore files copied
      in this section are copied from /site/ in the package -->
