  <filename>views/editmix/view.html.php</filename>
  <filename>views/editmix/tmpl/default.php</filename>
  <filename>views/editmix/tmpl/index.html</filename>
  <filename>views/createmix/index.html</filename>
  <filename>views/createmix/view.raw.php</filename>
